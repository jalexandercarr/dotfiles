# ~/.profile - executed by the command interpreter for login shells
# Not read by bash(1) if ~/.bash_profile or ~/.bash_login exists.

# Source .bashrc for interactive bash login shells
if [ -n "$BASH_VERSION" ]; then
    if [ -f "$HOME/.bashrc" ]; then
        . "$HOME/.bashrc"
    fi
fi

# Add user bin directories to PATH
if [ -d "$HOME/bin" ]; then
    PATH="$HOME/bin:$PATH"
fi

if [ -d "$HOME/.local/bin" ]; then
    PATH="$HOME/.local/bin:$PATH"
fi

# Directory listing colors
export LS_COLORS="${LS_COLORS}:di=04;36:ex=91"

# Kubernetes tools
if [ -d "$HOME/.kubectx" ]; then
    export PATH="$PATH:$HOME/.kubectx"
fi

# NVM (Node Version Manager)
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"

# goenv (Go version manager)
export GOENV_ROOT="$HOME/.goenv"
if [ -d "$GOENV_ROOT" ]; then
    export PATH="$GOENV_ROOT/bin:$PATH"
fi

# pyenv (Python version manager)
export PYENV_ROOT="$HOME/.pyenv"
if [ -d "$PYENV_ROOT" ]; then
    export PATH="$PYENV_ROOT/bin:$PATH"
fi

# Source local environment overrides (not managed by chezmoi)
if [ -f "$HOME/.env" ]; then
    . "$HOME/.env"
fi
