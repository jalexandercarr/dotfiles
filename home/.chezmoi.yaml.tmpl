# chezmoi configuration file (YAML format)
# This template prompts for user-specific values during `chezmoi init`

{{- /* ═══════════════════════════════════════════════════════════════════════ */ -}}
{{- /*                              User Info                                  */ -}}
{{- /* ═══════════════════════════════════════════════════════════════════════ */ -}}

{{- $name := promptStringOnce . "name" "Full name" -}}
{{- $email := promptStringOnce . "email" "Email address" -}}
{{- $githubUsername := promptStringOnce . "githubUsername" "GitHub username" -}}
{{- $sshSigningKey := promptStringOnce . "sshSigningKey" "SSH signing key path" "~/.ssh/id_github.pub" -}}

{{- /* ═══════════════════════════════════════════════════════════════════════ */ -}}
{{- /*                              Packages                                   */ -}}
{{- /* ═══════════════════════════════════════════════════════════════════════ */ -}}

{{- $installDevtools := promptBoolOnce . "packages.devtools" "Development tools" true -}}
{{- $installNeovim := promptBoolOnce . "packages.neovim" "Neovim" true -}}
{{- $installDocker := promptBoolOnce . "packages.docker" "Docker" false -}}
{{- $installGo := promptBoolOnce . "packages.go" "Go" false -}}
{{- $installKubernetes := promptBoolOnce . "packages.kubernetes" "Kubernetes tools" false -}}
{{- $installNode := promptBoolOnce . "packages.node" "Node" false -}}
{{- $installPython := promptBoolOnce . "packages.python" "Python" false -}}
{{- $installFonts := promptBoolOnce . "packages.fonts" "Fonts" true -}}

{{- /* ═══════════════════════════════════════════════════════════════════════ */ -}}
{{- /*                              Add-ons                                    */ -}}
{{- /* ═══════════════════════════════════════════════════════════════════════ */ -}}

{{- $installMotd := promptBoolOnce . "addons.motd" "Custom MOTD" false }}

data:
  name: {{ $name | quote }}
  email: {{ $email | quote }}
  githubUsername: {{ $githubUsername | quote }}
  sshSigningKey: {{ $sshSigningKey | quote }}
  packages:
    devtools: {{ $installDevtools }}
    neovim: {{ $installNeovim }}
    docker: {{ $installDocker }}
    go: {{ $installGo }}
    kubernetes: {{ $installKubernetes }}
    node: {{ $installNode }}
    python: {{ $installPython }}
    fonts: {{ $installFonts }}
  addons:
    motd: {{ $installMotd }}
