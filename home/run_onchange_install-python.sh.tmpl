#!/bin/bash
# chezmoi:template:left-delimiter="{{" right-delimiter="}}"
# Install Python - optional, controlled by chezmoi config

# Initialize log file first (before any redirects)
mkdir -p "${HOME}/.local/log/chezmoi"
CHEZMOI_LOG_FILE="${HOME}/.local/log/chezmoi/install-$(date +%Y%m%d-%H%M%S).log"

# Source the logging helper
HELPER_SCRIPT="${HOME}/.local/bin/chezmoi-log-helper.sh"
if [[ -f "$HELPER_SCRIPT" ]]; then
    source "$HELPER_SCRIPT"
else
    # Fallback if helper not yet installed - create minimal functions
    print_header() { printf "\n\033[1m\033[34m▸\033[0m \033[1m%s\033[0m\n" "$1"; }
    print_done() { printf "  \033[32m✓\033[0m %s\n" "$1"; }
    print_skip() { printf "  \033[2m○\033[0m \033[2m%s\033[0m\n" "$1"; }
    print_fail() { printf "  \033[31m✗\033[0m %s\n" "$1"; }
    with_spinner() { local msg="$1"; shift; printf "  \033[36m⠋\033[0m %s" "$msg"; if "$@" >> "$CHEZMOI_LOG_FILE" 2>&1; then printf "\r\033[K"; print_done "$msg"; else printf "\r\033[K"; print_fail "$msg"; return 1; fi; }
    log_silent() { echo "[$(date '+%H:%M:%S')] $*" >> "$CHEZMOI_LOG_FILE"; }
    log_section() { echo "=== $1 ===" >> "$CHEZMOI_LOG_FILE"; }
fi

{{- if not .packages.python }}
print_skip "Python (disabled in config)"
exit 0
{{- end }}

set -euo pipefail

OS="$(uname -s | tr '[:upper:]' '[:lower:]')"
ARCH="$(uname -m)"

PYTHON_VERSION="3.12.2"

log_section "Python Installation"
print_header "Python ${PYTHON_VERSION}"

install_python_macos() {
    if ! command -v brew >/dev/null; then
        with_spinner "Installing Homebrew" /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
    fi
    with_spinner "Installing Python" brew install --quiet python
}

install_python_debian() {
    # Prevent interactive prompts for tzdata and other packages
    export DEBIAN_FRONTEND=noninteractive
    export TZ=Etc/UTC
    sudo ln -snf /usr/share/zoneinfo/$TZ /etc/localtime >> "$CHEZMOI_LOG_FILE" 2>&1
    echo $TZ | sudo tee /etc/timezone > /dev/null
    
    with_spinner "Updating package lists" sudo apt-get update -qq
    with_spinner "Installing build dependencies" sudo apt-get install -y -qq build-essential libssl-dev zlib1g-dev libncurses5-dev \
        libncursesw5-dev libreadline-dev libsqlite3-dev libgdbm-dev libdb5.3-dev \
        libbz2-dev libexpat1-dev liblzma-dev tk-dev wget curl
    
    with_spinner "Downloading Python ${PYTHON_VERSION}" bash -c "cd /tmp && wget -q https://www.python.org/ftp/python/$PYTHON_VERSION/Python-$PYTHON_VERSION.tgz"
    with_spinner "Extracting Python" bash -c "cd /tmp && tar -xf Python-$PYTHON_VERSION.tgz"
    with_spinner "Configuring Python (this may take a while)" bash -c "cd /tmp/Python-$PYTHON_VERSION && ./configure --enable-optimizations"
    with_spinner "Building Python (this may take a while)" bash -c "cd /tmp/Python-$PYTHON_VERSION && make -j\$(nproc)"
    with_spinner "Installing Python" bash -c "cd /tmp/Python-$PYTHON_VERSION && sudo make altinstall"
    
    # Cleanup (needs sudo since make altinstall creates root-owned files)
    log_silent "Cleaning up temporary files"
    sudo rm -rf /tmp/Python-$PYTHON_VERSION* >> "$CHEZMOI_LOG_FILE" 2>&1
}

install_python_fedora() {
    with_spinner "Installing build dependencies" sudo dnf install -y -q gcc openssl-devel bzip2-devel libffi-devel zlib-devel wget make
    
    with_spinner "Downloading Python ${PYTHON_VERSION}" bash -c "cd /tmp && wget -q https://www.python.org/ftp/python/$PYTHON_VERSION/Python-$PYTHON_VERSION.tgz"
    with_spinner "Extracting Python" bash -c "cd /tmp && tar -xf Python-$PYTHON_VERSION.tgz"
    with_spinner "Configuring Python (this may take a while)" bash -c "cd /tmp/Python-$PYTHON_VERSION && ./configure --enable-optimizations"
    with_spinner "Building Python (this may take a while)" bash -c "cd /tmp/Python-$PYTHON_VERSION && make -j\$(nproc)"
    with_spinner "Installing Python" bash -c "cd /tmp/Python-$PYTHON_VERSION && sudo make altinstall"
    
    # Cleanup (needs sudo since make altinstall creates root-owned files)
    log_silent "Cleaning up temporary files"
    sudo rm -rf /tmp/Python-$PYTHON_VERSION* >> "$CHEZMOI_LOG_FILE" 2>&1
}

install_python_rhel() {
    with_spinner "Installing Development Tools" sudo yum groupinstall -y -q "Development Tools"
    with_spinner "Installing build dependencies" sudo yum install -y -q openssl-devel bzip2-devel libffi-devel zlib-devel wget make
    
    with_spinner "Downloading Python ${PYTHON_VERSION}" bash -c "cd /tmp && wget -q https://www.python.org/ftp/python/$PYTHON_VERSION/Python-$PYTHON_VERSION.tgz"
    with_spinner "Extracting Python" bash -c "cd /tmp && tar -xf Python-$PYTHON_VERSION.tgz"
    with_spinner "Configuring Python (this may take a while)" bash -c "cd /tmp/Python-$PYTHON_VERSION && ./configure --enable-optimizations"
    with_spinner "Building Python (this may take a while)" bash -c "cd /tmp/Python-$PYTHON_VERSION && make -j\$(nproc)"
    with_spinner "Installing Python" bash -c "cd /tmp/Python-$PYTHON_VERSION && sudo make altinstall"
    
    # Cleanup (needs sudo since make altinstall creates root-owned files)
    log_silent "Cleaning up temporary files"
    sudo rm -rf /tmp/Python-$PYTHON_VERSION* >> "$CHEZMOI_LOG_FILE" 2>&1
}

install_python_arch() {
    with_spinner "Installing Python" sudo pacman -Sy --noconfirm --quiet python
}

if [[ "$OS" == "darwin" ]]; then
    install_python_macos
elif [[ -f /etc/debian_version ]]; then
    install_python_debian
elif [[ -f /etc/fedora-release ]]; then
    install_python_fedora
elif [[ -f /etc/centos-release ]] || [[ -f /etc/redhat-release ]] || [[ -f /etc/system-release ]]; then
    install_python_rhel
elif [[ -f /etc/arch-release ]]; then
    install_python_arch
else
    print_fail "Unsupported OS for Python installation"
    log_silent "Unsupported OS: $OS"
    exit 1
fi

print_done "Python installed"
